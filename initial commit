// Origin: Jan 29, 2020

# include <iostream>
# include <limits>
using namespace std ;

int main() {
	int rows ;
	int cols ;
	int r ;
	int c ;
	// declaration of variables

	do {
		if ( !cin ) {
			cin.clear() ;
			cin.ignore(numeric_limits<streamsize>::max(), '\n') ;
  	}       
  	cout << "Enter a number of rows (1-12): " ;
  	cin >> rows ;
  	// clears flags for rows input
  } while (!cin || rows < 1 || rows > 12 ) ;
	
	do {
	if (!cin) {
		cin.clear() ;
		cin.ignore(numeric_limits<streamsize>::max(), '\n') ;
	}       
	cout << "Enter a number of columns (1-12): " ;
	cin >> cols ;
	// clears flags for columns
	} while (!cin || cols < 1 || cols > 12 ) ;
	
	while (true) { 
		cout << "\n<table>\n" ;
		// prints every time
        
		for ( r = 1 ; r <= rows ; r++ ) {
			cout << "<tr> " ; 
			for (c = 1 ; c <= cols ; c++ ) {
				cout << "<td>" << ( r * c ) << "</td> " ;
				// generates the table 
			}       
			cout << "</tr>" ;
			cout << "\n" ;
			// bookends table
			}
		cout << "</table>\n" ;
		break ; 
		// ends table 
		}
        
return 0 ;
}
